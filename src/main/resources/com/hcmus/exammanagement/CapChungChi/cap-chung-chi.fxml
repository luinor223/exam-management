<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="704.0" prefWidth="1066.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hcmus.exammanagement.controller.CapChungChiController">
    <children>
        <AnchorPane layoutX="12.0" layoutY="28.0" prefHeight="640.0" prefWidth="1035.0" styleClass="light-white-box" stylesheets="@../style.css">
            <children>
                <Label layoutX="14.0" layoutY="6.0" style="-fx-font-weight: bold;" text="Cấp chứng chỉ">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <TextField fx:id="searchField" layoutX="14.0" layoutY="44.0" prefHeight="29.0" prefWidth="300.0" promptText="Tìm kiếm theo SBD, CCCD hoặc họ tên thí sinh..." />

                <HBox layoutX="330.0" layoutY="44.0" spacing="10.0">
                    <children>
                        <ComboBox fx:id="filterStatus" prefWidth="150.0" promptText="Trạng thái" styleClass="custom-combobox" stylesheets="@../style.css">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Tất cả" />
                                    <String fx:value="Đã cấp" />
                                    <String fx:value="Chưa cấp" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <DatePicker fx:id="filterDateStart" prefWidth="150.0" promptText="Từ ngày" />
                        <DatePicker fx:id="filterDateEnd" prefWidth="150.0" promptText="Đến ngày" />
                        <Button fx:id="btnClear" mnemonicParsing="false" text="Xóa bộ lọc" />
                    </children>
                </HBox>

                <TableView fx:id="tableKetQua" layoutX="14.0" layoutY="85.0" prefHeight="540.0" prefWidth="1005.0" styleClass="custom-table-view" stylesheets="@../style.css">
                    <columns>
                        <TableColumn fx:id="colMaLT" prefWidth="100.0" text="Mã lịch thi" />
                        <TableColumn fx:id="colSBD" prefWidth="80.0" text="SBD" />
                        <TableColumn fx:id="colHoTen" prefWidth="180.0" text="Họ tên thí sinh" />
                        <TableColumn fx:id="colCCCD" prefWidth="110.0" text="CCCD" />
                        <TableColumn fx:id="colTenChungChi" prefWidth="150.0" text="Chứng chỉ" />
                        <TableColumn fx:id="colDiem" prefWidth="60.0" text="Điểm" />
                        <TableColumn fx:id="colXepLoai" prefWidth="80.0" text="Xếp loại" />
                        <TableColumn fx:id="colNgayThi" prefWidth="105.0" text="Ngày thi" />
                        <TableColumn fx:id="colTrangThai" prefWidth="90.0" text="Trạng thái" />
                        <TableColumn fx:id="colAction" prefWidth="150.0" text="Thao tác" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>